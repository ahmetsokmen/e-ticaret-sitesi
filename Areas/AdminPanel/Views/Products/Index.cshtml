@model IEnumerable<OrnekSite.Entity.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/AdminPanel/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <!-- /.box -->

            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Ürün Listesi</h3>
                </div><!-- /.box-header -->
                <br />
                <a href="@Url.Action("Create","Products")" class="btn btn-primary btn-lg">Ürün Ekle</a>
                <br />
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Resim</th>
                                <th>Ad</th>
                                <th>Kategori Adı</th>
                                <th>Onaylı</th>
                                <th>Anasayfa</th>
                                <th>Popüler</th>

                                <th>Slider</th>

                                <th></th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td><img src="@item.Image" width="80" height="60" alt="Alternate Text" /></td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Category.Name
                                </td>
                                <td>
                                    @if (item.IsApproved)
                                    {
                                        <label class="label label-success">Evet</label>
                                    }
                                    else
                                    {
                                        <label class="label label-danger">Hayır</label>

                                    }
                                </td>
                                <td>
                                    @if (item.IsHome)
                                    {
                                        <label class="label label-success">Evet</label>
                                    }
                                    else
                                    {
                                        <label class="label label-danger">Hayır</label>

                                    }
                                </td>
                                <td>
                                    @if (item.IsFeatured)
                                    {
                                        <label class="label label-success">Evet</label>
                                    }
                                    else
                                    {
                                        <label class="label label-danger">Hayır</label>

                                    }
                                </td>


                                <td>
                                    @if (item.Slider)
                                    {
                                        <label class="label label-success">Evet</label>
                                    }
                                    else
                                    {
                                        <label class="label label-danger">Hayır</label>

                                    }
                                </td>
                                <td>
                                    <a class="btn btn-primary" href="@Url.Action("Edit", new { id = item.Id })"> <i class="fa fa-fw fa-edit"></i>Düzenle</a>
                                    <a class="btn btn-danger" href="@Url.Action("Delete", new { id = item.Id })"><i class="fa fa-fw fa-trash-o"></i>Sil</a>
                                </td>

                            </tr>

                            }

                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Resim</th>
                                <th>Ad</th>
                                <th>Kategori Adı</th>
                                <th>Onaylı</th>
                                <th>Anasayfa</th>
                                <th>Popüler</th>                      
                                <th>Slider</th>

                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section>

