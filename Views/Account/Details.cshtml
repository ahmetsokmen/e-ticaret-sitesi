@model OrnekSite.Entity.ShippingDetails.OrderDetails
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="span12">

        <div class="well well-small">

            <table class="table table-bordered table-condensed">
                <thead>
                    <tr>
                        <th>Sipariş ID</th>
                        <th>Sipariş Numarası</th>
                        <th>Sipariş Tarihi</th>
                        <th>Toplam Tutar (₺)</th>
                        <th>Sipariş Durumu</th>
                        <th>Adres</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.OrderId</td>
                        <td>@Model.OrderNumber</td>
                        <td>@Model.OrderDate</td>
                        <td>@Model.Total</td>
                        <td>
                            @if (Model.OrderState == OrnekSite.Entity.ShippingDetails.OrderState.Bekleniyor)
                            {
                                <a class="btn btn-danger">Sipariş Bekleniyor</a>
                            }
                            else if (Model.OrderState == OrnekSite.Entity.ShippingDetails.OrderState.Tamamlandı)
                            {

                                <a class="btn btn-success">Sipariş Tamamlandı</a>

                            }
                            else if (Model.OrderState == OrnekSite.Entity.ShippingDetails.OrderState.Paketlendi)
                            {

                                <a class="btn btn-info">Sipariş Paketlendi</a>

                            }
                            else if (Model.OrderState == OrnekSite.Entity.ShippingDetails.OrderState.Kargolandı)
                            {

                                <a class="btn btn-primary">Sipariş Kargolandı</a>

                            }

                        </td>
                        <td>@Model.Adres</td>
                        <td>@Model.Sehir</td>
                        <td>@Model.Ilce</td>
                        <td>@Model.Mahalle</td>

                    </tr>
                   

                </tbody>
            </table><br />
            <table class="table table-bordered table-condensed">
                <thead>
                    <tr>
                        <th>Resim</th>
                        <th>Ürün Adı</th>
                        <th>Toplam Tutar (₺)</th>
                        <th>Adet</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderLines)
                    {
                        <tr>
                            <td><img src="@item.Image" alt="Alternate Text"  width="75" height="75"/></td>
                            <td>@item.ProductName</td>
                            <td>@item.Price</td>
                            <td>@item.Quantity</td>
                            <td><a class="btn btn-success" target="_blank" href="/Home/ProductDetails/@item.ProductId">Ürün Detay</a></td>
                        </tr>
                    }

                </tbody>
            </table>



        </div>
    </div>
</div>

