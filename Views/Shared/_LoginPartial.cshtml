        }
        else//giriş yapan kişi admin değilse
        {
            <li><a href="/Account/UserProfil"><span class="icon-edit"></span> Profilim</a></li>
            <li><a href="/Account/Index"> @User.Identity.Name</a></li>
            <li class="label-warning"><a href="/Account/Logout" style="color:white"><span class="icon-remove"></span> Çıkış</a></li>
        }
    }
    else
    {
        <li class="label-warning"><a href="/Account/Register" style="color:white"><span class="icon-edit"></span> Kayıt Ol</a></li>
        <li class="label-success"><a href="/Account/Login" style="color:white"><span class="icon-user"></span> Giriş Yap</a></li>


    }

