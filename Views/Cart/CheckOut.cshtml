@model OrnekSite.Entity.ShippingDetails.ShippingDetails
@{
    ViewBag.Title = "CheckOut";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div id="sidebar" class="span3">
        <div class="well well-small">
            <ul class="nav nav-list">
                @Html.Action("CategoryList", "Home")
                <li style="border:0"> &nbsp;</li>
                @Html.Action("Summary", "Cart")
            </ul>
        </div>

        <div class="well well-small alert alert-warning cntr">
            <h2>50% Discount</h2>
            <p>
                only valid for online order. <br><br><a class="defaultBtn" href="#">Click here </a>
            </p>
        </div>
        <div class="well well-small"><a href="#"><img src="~/Content/Site/assets/img/paypal.jpg" alt="payment method paypal"></a></div>

        <a class="shopBtn btn-block" href="#">Öne Çıkan Ürünler<br><small>Click to view</small></a>
        <br>
        <br>
        @Html.Action("FeaturedProduct", "Home")

    </div>
    <div class="span9">
        <ul class="breadcrumb">
            <li><a href="/Home/Index">Anasayfa</a> <span class="divider">/</span></li>
            <li class="active">Sipariş Formu</li>
        </ul>
        <hr class="soft" />
        <div class="well">
            @using (Html.BeginForm("CheckOut", "Cart", FormMethod.Post, new { @class = "form-horizontal" }))
            {
               
                <h3>Adres Bilgileri</h3>

                <div class="control-group">
                    <label class="control-label" for="inputFname">Kullanıcı Adı </label>
                    <div class="controls">
                        <div class="col-md-10">
                            <div class="btn btn-success">@User.Identity.Name</div>
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputFname">Adres </label>
                    <div class="controls">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Adress, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                            @Html.ValidationMessageFor(model => model.Adress, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputFname">Şehir </label>
                    <div class="controls">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                            @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputFname">İlçe </label>
                    <div class="controls">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Ilce, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                            @Html.ValidationMessageFor(model => model.Ilce, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputFname">Mahalle </label>
                    <div class="controls">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Mahalle, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                            @Html.ValidationMessageFor(model => model.Mahalle, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                


                <div class="control-group">
                    <div class="controls">
                        <input type="submit" name="submitAccount" value="Sipariş Ver" class="exclusive shopBtn">
                    </div>
                </div>

            }



        </div>




    </div>
</div>

